package basicjava;
import java.util.*;
class namee{
	static String getmiddlecharacters(String a)
	{
		String t;
		int l,n;
	l=a.length();
	n=l/2;
	t=a.substring(n-1,n+1);
	return t;
	}
}
public class main4 {
	public static void main(String args[])
	{
		String s,p;
		
		Scanner sc=new Scanner(System.in);
		System.out.println("enter the string");
		s=sc.next();
		if((s.length())%2==0)
		{
		p=namee.getmiddlecharacters(s);
		System.out.println("the string is "+p);
		}
		else
			System.out.println("not having even chars");
	}

}
